$header-height = 80px

// Colors
$white      = #EFEFEF
$grey       = #CCCCCC
$light-grey = #F1F1F1
$black      = #000000
$blue       = #5AFCF2

// Font sizes
$base-font-size = 16px
$h1-font-size   = 34px
$h2-font-size   = 24px
$h3-font-size   = 18px

// Rupture
rupture.base-font-size = $base-font-size

rupture.hd-cutoff      = 1440px
rupture.desktop-cutoff = 1280px
rupture.tablet-cutoff  = 1024px
rupture.mobile-cutoff  = 768px

rupture.scale = 0 rupture.mobile-cutoff rupture.tablet-cutoff rupture.desktop-cutoff rupture.hd-cutoff

// Global easing for ui
$ease-fn        = $ease-out-sine
$ease-in-fn     = $ease-in-sine
$ease-in-out-fn = $ease-in-out-sine